# Database
# PostgreSQLを使用する場合（推奨）:
DATABASE_URL="postgresql://username:password@localhost:5432/dbname?schema=public"
# 例: DATABASE_URL="postgresql://postgres:postgres@localhost:5432/websocket_bbs?schema=public"

# SQLiteを使用する場合（開発用）:
# DATABASE_URL="file:./dev.db"
# 注意: SQLiteを使用する場合は apps/api/prisma/schema.prisma の datasource を変更してください

# JWT Secret (必須: 32文字以上のランダムな文字列)
# 生成例: openssl rand -base64 32
JWT_SECRET="your-secret-key-here-at-least-32-characters-long"

# WebSocket Server
PORT=3001
ALLOWED_WS_ORIGIN="http://localhost:8000"

# Optional JWT settings (推奨: トークンの発行元と対象を明確化)
JWT_ISSUER="websocket-framework"
JWT_AUDIENCE="websocket-framework-api"

# Node Environment
NODE_ENV="development"
