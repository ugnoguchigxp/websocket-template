# Database
# SQLiteを使用する場合（開発用）:
DATABASE_URL="file:./data/app.db"

# WebSocket Server
PORT=3001
ALLOWED_WS_ORIGIN="http://localhost:8000"
ALLOWED_HTTP_ORIGIN="http://localhost:8000"

# OIDC / OAuth2
OIDC_ISSUER="https://your-tenant.example.com/"
OIDC_CLIENT_ID="your-client-id"
# 機密クライアントであれば必須。PKCE＋バックエンド仲介方式で利用
OIDC_CLIENT_SECRET="your-client-secret"
OIDC_REDIRECT_URI="http://localhost:8000/"
OIDC_AUDIENCE="api://default"
# スコープは IdP に合わせて調整してください
OIDC_SCOPE="openid profile email offline_access"
# Discovery から自動取得するため通常は空でOK。明示指定する場合のみ設定
# OIDC_JWKS_URI=""
# OIDC_TOKEN_ENDPOINT=""
# OIDC_USERINFO_ENDPOINT=""
# OIDC_REVOCATION_ENDPOINT=""
# Cookie 設定（必要に応じて変更）
OIDC_REFRESH_COOKIE_NAME="refresh_session"
OIDC_REFRESH_COOKIE_SAMESITE="Lax"
# TTL (秒)。IdPがrefresh_expires_inを返す場合はそちらが優先される
OIDC_REFRESH_TOKEN_TTL_SECONDS=86400

# Node Environment
NODE_ENV="development"
