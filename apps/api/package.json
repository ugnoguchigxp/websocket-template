{
  "name": "@wsfw/api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite-node src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "db": "prisma",
    "db:migrate": "prisma migrate dev",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:seed": "vite-node prisma/seed/index.ts",
    "db:reset": "prisma migrate reset --force",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:run": "vitest --run",
    "test:coverage:run": "vitest --coverage --run",
    "openapi": "vite-node src/generate-openapi.ts",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format .",
    "format:fix": "biome format --write .",
    "check": "biome check .",
    "check:fix": "biome check --write ."
  },
  "dependencies": {
    "@prisma/client": "^5.20.0",
    "@trpc/server": "^10.45.2",
    "argon2": "^0.40.3",
    "bindings": "^1.5.0",
    "dotenv": "^17.2.3",
    "file-uri-to-path": "^2.0.0",
    "jsonwebtoken": "^9.0.2",
    "reflect-metadata": "^0.1.13",
    "superjson": "^2.2.1",
    "trpc-openapi": "^1.2.0",
    "tsyringe": "^4.10.0",
    "ws": "^8.18.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/better-sqlite3": "^7.6.13",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^24.9.2",
    "@types/ws": "^8.5.10",
    "@vitest/coverage-v8": "1.6.1",
    "prisma": "^5.20.0",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.6.3",
    "vite": "^5.4.10",
    "vite-node": "^1.6.0",
    "vitest": "^1.6.0"
  }
}
